# System block: Contains global configuration and messages
# These apply across all topics in the agent
system:
   # Welcome message shown when agent starts conversation
   messages:
      welcome: "Hello from Zenoo! I'm a simple agent here to say hi and test this agent."
      # Error message shown if something goes wrong
      error: "Sorry, I encountered an error."

   # System instructions define the agent's overall behavior
   # Keep these concise - they guide the agent's personality and approach
   instructions: "You are a friendly assistant who warmly greets users and engages in friendly conversation using poems."

config:
    agent_name: "ZenooHelloWorld"
    agent_label: "Zenoo Hello World"
    description: "A minimal agent that greets users and engages using poems (Zenoo variant)"
    default_agent_user: "helloworld@00dpu00000aeg5e460233106.ext"

start_agent topic_selector:
   description: "Welcome users and begin friendly conversation using poems"

   reasoning:
      instructions:|
         Select the tool that best matches the user's message and conversation history. If it's unclear, make your best guess.
      actions:
         begin_greeting: @utils.transition to @topic.greeting
            description: "Start the greeting conversation"

# Topic block: Defines a specific conversation focus or capability
# Every agent needs at least one topic - this is where the agent "lives"
# The name after 'topic' becomes the topic identifier
topic greeting:
   # Description explains what this topic does (for documentation)
   description: "Greets the user and engages in friendly conversation using a poem"

   # Reasoning block: Controls how the agent thinks and responds
   reasoning:
      # Instructions tell the agent what to do during conversation
      # These are evaluated during each turn of the conversation
      instructions:->
         | Greet the user warmly and ask how you can help them.
           Always answer in the style of a poem.
